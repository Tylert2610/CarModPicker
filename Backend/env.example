# CarModPicker Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
# For local development, use a local PostgreSQL instance
DATABASE_URL=postgresql://username:password@localhost:5432/carmodpicker_dev

# Railway will automatically provide DATABASE_URL for PostgreSQL addon
# You don't need to set DATABASE_URL manually in Railway

# API Configuration
DEBUG=true
PROJECT_NAME=CarModPicker
API_STR=/api

# Authentication & Security
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60
HASH_ALGORITHM=HS256

# CORS Configuration
# Add your frontend domains here, separated by commas
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173","https://your-frontend-domain.railway.app"]

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@carmodpicker.com
SENDGRID_VERIFY_EMAIL_TEMPLATE_ID=your-template-id
SENDGRID_RESET_PASSWORD_TEMPLATE_ID=your-template-id

# Railway-specific variables (automatically set by Railway)
# PORT=8000  # Railway sets this automatically
# RAILWAY_ENVIRONMENT=production  # Railway sets this automatically

# Development vs Production flags
# Set to "production" when deploying to Railway
RAILWAY_ENVIRONMENT=development
